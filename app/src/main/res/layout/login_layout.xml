<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:scrollbars="vertical">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/identity_phone_email_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/phone_email_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address/Phone Number"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_password_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/login_password_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Registration Password"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="Login"/>
    <TextView
        android:id="@+id/account_create_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:text="Account Unavailable? Tap here to create one"
        android:textColor="@color/colorPrimaryDark"
        android:clickable="true"
        android:textAlignment="center"/>

</LinearLayout>

