<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ff_code_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/ff_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:hint="Fresh Food Item Code"
            android:inputType="textCapCharacters" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ff_name_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/ff_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:hint="Fresh Food Item Name"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <TableRow
        android:id="@+id/ff_quantity_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ff_quantity_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ff_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantity"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ff_quantity_unit_price_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ff_quantity_unit_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unit Price"
                android:inputType="numberDecimal" />
        </android.support.design.widget.TextInputLayout>
    </TableRow>

    <TableRow
        android:id="@+id/ff_mass_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ff_mass_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ff_mass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mass"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ff_mass_unit_price_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ff_mass_unit_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unit Price"
                android:inputType="numberDecimal" />
        </android.support.design.widget.TextInputLayout>
    </TableRow>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ff_start_price_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/ff_start_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Starting Price"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/ff_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="Add Item" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ff_complete_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="50dp"
        android:src="@android:drawable/ic_menu_save" />
</LinearLayout>

