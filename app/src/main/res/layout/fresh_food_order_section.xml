<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ff_product_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/ff_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="12dp"
        android:textAlignment="center" />

    <TableRow
        android:id="@+id/ff_mass_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ff_product_mass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:text="Mass" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ff_product_mass_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ff_product_mass_setter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:padding="15dp" />
        </android.support.design.widget.TextInputLayout>
    </TableRow>

    <TableRow
        android:id="@+id/ff_qty_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ff_product_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:text="Quantity" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/product_qty_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/product_qty_setter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="15dp" />
        </android.support.design.widget.TextInputLayout>
    </TableRow>

    <TableRow
        android:id="@+id/ff_price_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ff_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:text="Set Price" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ff_product_price_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ff_product_price_setter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="15dp" />
        </android.support.design.widget.TextInputLayout>
    </TableRow>

    <TextView
        android:id="@+id/bakery_item_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp" />

    <Button
        android:id="@+id/ff_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List This Item" />

    <Button
        android:id="@+id/ff_complete_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete The List" />
</LinearLayout>
